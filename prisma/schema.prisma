// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-py"
  recursive_type_depth = 5
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Gene {
  hgnc_id String @id @unique
  name String
  aliases Alias[]
  hg38_pos_id Int @unique
  hg38_pos Gene_Position @relation(name: "hg38_pos", fields: [hg38_pos_id], references: [id])
  hg19_pos_id Int @unique
  hg19_pos Gene_Position @relation(name: "hg19_pos", fields: [hg19_pos_id], references: [id])
  gene_diseases GeneDisease[]
}

model Alias {
  id Int @id @default(autoincrement())
  alias_name String
  gene Gene @relation(fields: [gene_id], references: [hgnc_id])
  gene_id String 
}

model Gene_Position {
  id Int @id @default(autoincrement())
  chr String
  start Int
  end Int
  strand Int
  gene_hg38 Gene? @relation(name: "hg38_pos")
  gene_hg19 Gene? @relation(name: "hg19_pos")
}

model Disease {
  id Int @id @default(autoincrement())
  disease String
  gene_diseases GeneDisease[]
}

model GeneDisease {
  gene Gene @relation(fields: [gene_id], references: [hgnc_id])
  gene_id String
  disease Disease @relation(fields: [disease_id], references: [id])
  disease_id Int

  @@id([gene_id, disease_id])
}

